.side__bar
  .side__header
    .side__header-title
      %h1.side__header-title-name 
        = current_user.name
      %ul.side__header-title-list
        %li.side__header-title-list-create-group
          =link_to "#", class: "create-group" do
            %i.far.fa-sticky-note
        %li.side__header-title-list-edit-user
          =link_to edit_user_path(current_user), class: "edit-user" do
            %i.fas.fa-cog
  .groups
    =link_to "#", class: "groups-name" do
      <p>groups-name</p>
