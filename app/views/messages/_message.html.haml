.main__contents-user
  .main__contents-user-title
    .main__contents-user-title-name 
      = message.user.name
    .main__contents-user-title-posttime
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main__contents-user-message 
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?